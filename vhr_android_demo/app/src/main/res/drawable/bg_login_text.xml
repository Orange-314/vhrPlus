<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景颜色 -->
    <solid android:color="@color/snowwhite" />
    <!-- 边框的宽度和颜色颜色 -->
    <stroke android:width="1dip" android:color="@color/snowwhite" />
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="30dp"/>
    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp"
        />

</shape>