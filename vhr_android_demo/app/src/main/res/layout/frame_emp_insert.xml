                    android:layout_gravity="fill"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/employee_contractEndDate"
                    android:textSize="18dp"
                    android:gravity="fill"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/EmployeeInsertendContract"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="right|fill_vertical"
                    android:textSize="18dp"
                    android:background="@color/fafafa"
                    android:layout_gravity="right"
                    android:ellipsize="end"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:hint="合同终止日期"/>

                <View
                    android:layout_columnSpan="2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#F6F6F7" />

                <LinearLayout
                    android:layout_columnSpan="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F6F6F7"
                    android:orientation="horizontal">
                    <Button
                        android:layout_columnSpan="2"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="100dp"
                        android:id="@+id/EmployeeInsertButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_login_text"
                        android:text="确认"
                        android:textColor="@color/black">

                    </Button>
                </LinearLayout>
            </GridLayout>

            <View
                android:layout_columnSpan="2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/fafafa" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>