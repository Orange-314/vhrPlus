<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.vhrdemo.dao.IRoleDao">
    <resultMap id="BaseResultMap" type="com.example.vhrdemo.entity.Role">
    </resultMap>
    <select id="findall" resultMap="BaseResultMap" parameterType="com.example.vhrdemo.entity.Role">
        SELECT * from role;
    </select>
    <select id="search" resultMap="BaseResultMap" parameterType="com.example.vhrdemo.entity.Role">
        SELECT * from role where id=#{id}
    </select>
    <insert id="insert" parameterType="com.example.vhrdemo.entity.Role">
        INSERT INTO role VALUES (#{id},#{name},#{nameZh});
    </insert>
    <update id="update" parameterType="com.example.vhrdemo.entity.Role">
        UPDATE role SET name=#{name} WHERE nameZh=#{nameZh};
    </update>
    <update id="update2" parameterType="com.example.vhrdemo.entity.Role">
        UPDATE role SET nameZH=#{nameZh} WHERE name=#{name};
    </update>
    <delete id="delete" parameterType="com.example.vhrdemo.entity.Role">
        DELETE FROM role WHERE id=#{id};
    </delete>
</mapper>