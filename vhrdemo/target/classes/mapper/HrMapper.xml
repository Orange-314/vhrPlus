<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.vhrdemo.dao.IHrDao">
    <resultMap id="BaseResultMap" type="com.example.vhrdemo.entity.Hr">
    </resultMap>
    <select id="login" resultMap="BaseResultMap" parameterType="com.example.vhrdemo.entity.Hr">
        SELECT * from hr where username=#{username} and password=#{password};
    </select>
    <select id="login2" resultMap="BaseResultMap" parameterType="com.example.vhrdemo.entity.Hr">
        SELECT * from hr where username=#{username} and password=#{password};
    </select>
    <select id="login3" resultMap="BaseResultMap" parameterType="com.example.vhrdemo.entity.Hr">
        SELECT * from hr where id=#{id};
    </select>
    <update id="update" parameterType="com.example.vhrdemo.entity.Hr">
        UPDATE hr SET password=#{password} WHERE username=#{username};
    </update>
    <insert id="insert" parameterType="com.example.vhrdemo.entity.Hr">
        INSERT INTO hr VALUES (#{id},' ',' ',' ',' ','1',#{username},#{password},' ',' ');
    </insert>
    <insert id="regist" parameterType="com.example.vhrdemo.entity.Hr">
        INSERT INTO hr (username,password) VALUES (#{username},#{password});
    </insert>
    <delete id="delete" parameterType="com.example.vhrdemo.entity.Hr">
        DELETE FROM hr WHERE username=#{username} and password=#{password};
    </delete>

</mapper>
