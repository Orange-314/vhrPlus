<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.vhrdemo.dao.INationDao">
    <resultMap id="BaseResultMap" type="com.example.vhrdemo.entity.Nation">
    </resultMap>
    <select id="search" resultMap="BaseResultMap" parameterType="com.example.vhrdemo.entity.Nation">
        SELECT * from nation where name=#{name};
    </select>
    <update id="update" parameterType="com.example.vhrdemo.entity.Nation">
        UPDATE nation SET name=#{name} WHERE id=#{id};
    </update>
    <insert id="insert" parameterType="com.example.vhrdemo.entity.Nation">
        INSERT INTO nation VALUES (#{id},#{name});
    </insert>
    <delete id="delete" parameterType="com.example.vhrdemo.entity.Nation">
        DELETE FROM nation WHERE name=#{name};
    </delete>

</mapper>